---
import Favicon from "./head/favicon.astro";
const {
    title,
    description,
    baseUrl = "https://zentarunning.com/",
} = Astro.props;
---

<head>
    <Favicon />
    <meta name="description" content={description} />
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
    <meta name="og:url" content={baseUrl} />
    <meta name="og:type" content="website" />
    <meta name="og:image" content="img/info.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="img/info.png" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Gantari:ital,wght@0,100..900;1,100..900&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Notable&display=swap"
        rel="stylesheet"
    />
    <link rel="preload" href="img/background.png" as="image" />
    <link rel="preload" href="img/whiteLine1.png" as="image" />
    <slot />
</head>
